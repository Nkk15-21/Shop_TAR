@model IEnumerable<ShopTARgv24.Models.Spaceships.SpaceshipsIndexViewModel>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="spaceship" type="submit" class="btn btn-primary">Create</a>
</div>
    
<div class="h1">Spaceships</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Build Date</th>
                <th scope="col">Crew</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceships in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>Nr</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.TypeName</td>
                    <td>@spaceships.BuiltDate</td>
                    <td>@spaceships.Crew</td>
                </tr>

                rowNumber += 1;
            }
        </tbody>
    </table>
</form>