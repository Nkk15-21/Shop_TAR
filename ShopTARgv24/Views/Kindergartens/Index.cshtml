@model IEnumerable<ShopTARgv24.Core.Domain.Kindergarten>

@{
    ViewData["Title"] = "Kindergartens";
}

<h1>All Kindergartens</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Kindergarten</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Kindergarten Name</th>
            <th>Children Count</th>
            <th>Teacher</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<ShopTARgv24.Core.Domain.Kindergarten>())
        {
            <tr>
                <td>@item.GroupName</td>
                <td>@item.KindergartenName</td>
                <td>@item.ChildrenCount</td>
                <td>@item.TeacherName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>